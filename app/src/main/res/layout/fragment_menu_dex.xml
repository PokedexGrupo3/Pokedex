<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#933B3C"
    tools:context=".Features.ApenasViews.MenuDexFragment">



    <ImageView
        android:id="@+id/imgPokebola"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvNomeUsuario"
        android:layout_marginBottom="20dp"
        app:srcCompat="@drawable/poke" />


    <TextView
        android:id="@+id/tvNomeUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nomeUsuario"
        android:textAllCaps="true"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgPokebola"
        android:layout_marginTop="20dp"/>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvNomeUsuario"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="10dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="19dp"
        app:cardElevation="6dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/imgPokedex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/Pink"
            android:layout_marginStart="20dp"
            app:cardCornerRadius="19dp"
            app:cardElevation="6dp"
            >
            <ImageView
                android:layout_width="@dimen/normalSize"
                android:layout_height="@dimen/normalSize"
                android:src="@drawable/insignias"
                android:contentDescription="Pokedex"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pokemon"
                android:layout_marginTop="150dp"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"
                android:textStyle="italic"/>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/imgDex2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_gravity="end"
            android:backgroundTint="@color/Pink"
            app:cardCornerRadius="19dp"
            app:cardElevation="6dp"
            >
            <ImageView
                android:layout_width="@dimen/normalSize"
                android:layout_height="@dimen/normalSize"
                android:src="@drawable/configuracao"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/configuracao"
                android:layout_marginTop="150dp"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"
                android:textStyle="italic"/>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/imgDex3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="220dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/Pink"
            app:cardCornerRadius="19dp"
            app:cardElevation="6dp"
            >

            <ImageView
                android:layout_width="@dimen/normalSize"
                android:layout_height="@dimen/normalSize"
                android:src="@drawable/item" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item"
                android:layout_marginTop="150dp"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"
                android:textStyle="italic"/>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgDex4"
            android:layout_marginStart="20dp"
            android:layout_marginTop="220dp"
            android:backgroundTint="@color/Pink"
            app:cardCornerRadius="19dp"
            app:cardElevation="6dp"
            >
            <ImageView
                android:layout_width="@dimen/normalSize"
                android:layout_height="@dimen/normalSize"
                android:src="@drawable/region"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/region"
                android:layout_marginTop="150dp"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"
                android:textStyle="italic"/>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/imgDex7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="420dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/Pink"
            app:cardCornerRadius="19dp"
            app:cardElevation="6dp"
            >
            <ImageView
                android:layout_width="@dimen/normalSize"
                android:layout_height="@dimen/normalSize"
                android:src="@drawable/game"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/game"
                android:layout_marginTop="150dp"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"
                android:textStyle="italic"/>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/imgDex8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="420dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/Pink"
            app:cardCornerRadius="19dp"
            app:cardElevation="6dp"
            >
            <ImageView
                android:layout_width="@dimen/normalSize"
                android:layout_height="@dimen/normalSize"
                android:src="@drawable/encontros"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/encounters"
                android:layout_marginTop="150dp"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"
                android:textStyle="italic"/>

        </androidx.cardview.widget.CardView>


    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>